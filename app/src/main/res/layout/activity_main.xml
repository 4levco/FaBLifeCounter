<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/addp1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/transparent"
        android:text="+"
        style="@style/MyText"
        app:layout_constraintBottom_toTopOf="@+id/subp1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textp1" />

    <Button
        android:id="@+id/subp1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/transparent"
        android:text="-"
        style="@style/MyText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addp1" />

    <Button
        android:id="@+id/addp2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/transparent"
        android:text="+"
        style="@style/MyText"
        app:layout_constraintBottom_toTopOf="@+id/textp2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subp2" />

    <Button
        android:id="@+id/subp2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/transparent"
        android:text="-"
        style="@style/MyText"
        app:layout_constraintBottom_toTopOf="@+id/addp2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textp1"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Player 1"
        app:layout_constraintBottom_toTopOf="@+id/addp1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textp2" />

    <TextView
        android:id="@+id/textp2"

        android:layout_width="0dp"
        android:layout_height="45dp"
        android:text="Player 2"
        android:rotation="180"
        app:layout_constraintBottom_toTopOf="@+id/textp1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addp2" />

    <TextView
        android:id="@+id/healthtextp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="40"
        style="@style/MyText"
        app:layout_constraintBottom_toTopOf="@+id/subp1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addp1" />

    <TextView
        android:id="@+id/healthtextp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="40"
        style="@style/MyText"
        android:rotation="180"
        app:layout_constraintBottom_toTopOf="@+id/addp2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subp2" />

</androidx.constraintlayout.widget.ConstraintLayout>